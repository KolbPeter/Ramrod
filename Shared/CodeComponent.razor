@using Ramcor.Data
@using Ramcor.Data.Models
@using Ramcor.Data.Validators

@if (RamcorCodeValidators.Validate(Code).IsValid)
{
    <div>
        <label>Aktuális kód: </label>
        <table>
            <tr>
                @for (int i = 0; i < 10; i++)
                {
                    <td class="good_td">@i</td>
                }
            </tr>
            <tr>
                @foreach(var character in Code.CodeWord)
                {
                    <td class="good_td">@character</td>
                }
            </tr>
        </table>
    </div>
}

@code
{
    [Parameter]
    public RamcorCode Code { get; set; }
}
